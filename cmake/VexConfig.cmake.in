@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

# Propagate the backend configuration
set(VEX_ENABLE_DX12 @VEX_ENABLE_DX12)
set(VEX_ENABLE_VULKAN @VEX_ENABLE_VULKAN)
set(VEX_ENABLE_SLANG @VEX_ENABLE_SLANG)

# Store vex's root dir for shader/runtime file access
set(VEX_ROOT_DIR "@PACKAGE_CMAKE_INSTALL_PREFIX@/include")

find_dependency(magic_enum REQUIRED)
if (VEX_ENABLE_VULKAN)
	find_dependency(Vulkan REQUIRED)
endif()

include("${CMAKE_CURRENT_LIST_DIR}/VexTargets.cmake")
include("${CMAKE_CURRENT_LIST_DIR}/VexHelpers.cmake")

check_required_components(Vex)

