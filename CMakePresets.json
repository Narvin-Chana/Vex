{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "VEX_BUILD_TESTS": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "YES",
        "FETCHCONTENT_BASE_DIR": "${sourceDir}/out/_deps"
      }
    },
    {
      "name": "dx12-api",
      "hidden": true,
      "cacheVariables": {
        "VEX_GRAPHICS_BACKEND": "DX12"
      }
    },
    {
      "name": "vulkan-api",
      "hidden": true,
      "cacheVariables": {
        "VEX_GRAPHICS_BACKEND": "VULKAN"
      }
    },
    {
      "name": "msvc-compiler",
      "hidden": true,
      "environment": {
        "VSCMD_ARG_TGT_ARCH": "x64"
      }
    },
    {
      "name": "clang-compiler",
      "hidden": true,
      "environment": {
        "CC": "clang-cl",
        "CXX": "clang-cl"
      }
    },
    {
      "name": "msvc-dx12",
      "displayName": "MSVC | DirectX 12",
      "inherits": [ "base", "msvc-compiler", "dx12-api" ]
    },
    {
      "name": "msvc-vulkan",
      "displayName": "MSVC | Vulkan",
      "inherits": [ "base", "msvc-compiler", "vulkan-api" ]
    },
    {
      "name": "clang-dx12",
      "displayName": "Clang | DirectX 12",
      "inherits": [ "base", "clang-compiler", "dx12-api" ],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "clang-vulkan",
      "displayName": "Clang | Vulkan",
      "inherits": [ "base", "clang-compiler", "vulkan-api" ]
    }
  ],
  "buildPresets": [
    {
      "name": "msvc-dx12-debug",
      "displayName": "Debug",
      "configurePreset": "msvc-dx12",
      "configuration": "Debug"
    },
    {
      "name": "msvc-vulkan-debug",
      "displayName": "Debug",
      "configurePreset": "msvc-vulkan",
      "configuration": "Debug"
    },
    {
      "name": "msvc-dx12-development",
      "displayName": "Development",
      "configurePreset": "msvc-dx12",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "msvc-vulkan-development",
      "displayName": "Development",
      "configurePreset": "msvc-vulkan",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "msvc-dx12-shipping",
      "displayName": "Shipping",
      "configurePreset": "msvc-dx12",
      "configuration": "Release"
    },
    {
      "name": "msvc-vulkan-shipping",
      "displayName": "Shipping",
      "configurePreset": "msvc-vulkan",
      "configuration": "Release"
    },
    {
      "name": "clang-dx12-debug",
      "displayName": "Debug",
      "configurePreset": "clang-dx12",
      "configuration": "Debug"
    },
    {
      "name": "clang-vulkan-debug",
      "displayName": "Debug",
      "configurePreset": "clang-vulkan",
      "configuration": "Debug"
    },
    {
      "name": "clang-dx12-development",
      "displayName": "Development",
      "configurePreset": "clang-dx12",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "clang-vulkan-development",
      "displayName": "Development",
      "configurePreset": "clang-vulkan",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "clang-dx12-shipping",
      "displayName": "Shipping",
      "configurePreset": "clang-dx12",
      "configuration": "Release"
    },
    {
      "name": "clang-vulkan-shipping",
      "displayName": "Shipping",
      "configurePreset": "clang-vulkan",
      "configuration": "Release"
    }
  ]
}