{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "YES",
        "FETCHCONTENT_BASE_DIR": "${sourceDir}/out/_deps"
      }
    },
    {
      "name": "debug-build",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "development-build",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "shipping-build",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "dx12-api",
      "hidden": true,
      "cacheVariables": {
        "VEX_GRAPHICS_BACKEND": "DX12"
      }
    },
    {
      "name": "vulkan-api",
      "hidden": true,
      "cacheVariables": {
        "VEX_GRAPHICS_BACKEND": "VULKAN"
      }
    },
    {
      "name": "msvc-compiler",
      "hidden": true,
      "environment": {
        "VSCMD_ARG_TGT_ARCH": "x64"
      }
    },
    {
      "name": "clang-compiler",
      "hidden": true,
      "environment": {
        "CC": "clang",
        "CXX": "clang++"
      }
    },
    {
      "name": "msvc-debug-dx12",
      "displayName": "MSVC | Debug | DirectX 12",
      "inherits": [ "base", "msvc-compiler", "debug-build", "dx12-api" ]
    },
    {
      "name": "msvc-debug-vulkan",
      "displayName": "MSVC | Debug | Vulkan",
      "inherits": [ "base", "msvc-compiler", "debug-build", "vulkan-api" ]
    },
    {
      "name": "msvc-development-dx12",
      "displayName": "MSVC | Development | DirectX 12",
      "inherits": [ "base", "msvc-compiler", "development-build", "dx12-api" ]
    },
    {
      "name": "msvc-development-vulkan",
      "displayName": "MSVC | Development | Vulkan",
      "inherits": [ "base", "msvc-compiler", "development-build", "vulkan-api" ]
    },
    {
      "name": "msvc-shipping-dx12",
      "displayName": "MSVC | Release | DirectX 12",
      "inherits": [ "base", "msvc-compiler", "shipping-build", "dx12-api" ]
    },
    {
      "name": "msvc-shipping-vulkan",
      "displayName": "MSVC | Release | Vulkan",
      "inherits": [ "base", "msvc-compiler", "shipping-build", "vulkan-api" ]
    },
    {
      "name": "clang-debug-dx12",
      "displayName": "Clang | Debug | DirectX 12",
      "inherits": [ "base", "clang-compiler", "debug-build", "dx12-api" ],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "clang-debug-vulkan",
      "displayName": "Clang | Debug | Vulkan",
      "inherits": [ "base", "clang-compiler", "debug-build", "vulkan-api" ]
    },
    {
      "name": "clang-development-dx12",
      "displayName": "Clang | Development | DirectX 12",
      "inherits": [ "base", "clang-compiler", "development-build", "dx12-api" ],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "clang-development-vulkan",
      "displayName": "Clang | Development | Vulkan",
      "inherits": [ "base", "clang-compiler", "development-build", "vulkan-api" ]
    },
    {
      "name": "clang-shipping-dx12",
      "displayName": "Clang | Release | DirectX 12",
      "inherits": [ "base", "clang-compiler", "shipping-build", "dx12-api" ],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "clang-shipping-vulkan",
      "displayName": "Clang | Release | Vulkan",
      "inherits": [ "base", "clang-compiler", "shipping-build", "vulkan-api" ]
    }
  ]
}